pipeline {
    agent any
    
    // triggers {
    //     cron("*/2 * * * *")
    // }
    
    environment {
        MAINTAINER = "samuel"
    }
     
    stages {
        stage("Checkout") {
            steps {
                sh "sleep 2"
                echo 'Checked out code successfully from repo'
            }
        }
         stage("Build") {
            steps {
                echo 'Code built successfully'
            }
        }
         stage("Deploy") {
            steps {
                echo "Code deployed successfully"
            }
        }
         stage("Post Deploy") {
            steps {
                echo "Code Post deployed"
            }
        }
    }
}